<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApplication1">


    <Style TargetType="{x:Type local:WatermarkCustom}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WatermarkCustom}">
                    <StackPanel>
                        <Label Content="Name" />
                        <Grid>
                            <TextBox x:Name="PART_txtBox" />
                            <TextBlock x:Name="PART_watermarkTxtBlock"
                                       IsHitTestVisible="False"
                                       Opacity=".5"
                                       Text="{Binding Path=CustomWatermarkText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:WatermarkCustom}}}" />
                        </Grid>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>

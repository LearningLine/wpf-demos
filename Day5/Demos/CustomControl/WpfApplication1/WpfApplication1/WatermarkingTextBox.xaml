<UserControl x:Class="WpfApplication1.WatermarkingTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApplication1"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <Label Content="Name" />
            <Grid>
                <TextBox x:Name="txtBox" LostFocus="UIElement_OnLostFocus" GotFocus="UIElement_OnGotFocus" />
                <TextBlock x:Name="txtWatermark" IsHitTestVisible="False" Opacity=".5" Text="{Binding Path=WatermarkText, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:WatermarkingTextBox}}}" />
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>

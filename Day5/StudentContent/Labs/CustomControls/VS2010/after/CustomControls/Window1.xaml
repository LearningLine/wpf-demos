<Window x:Class="CustomControls.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:me="clr-namespace:CustomControls"
    xmlns:uc="clr-namespace:UserControls;assembly=UpDownControl"
    xmlns:cc="clr-namespace:RatingControl;assembly=RatingControl"
    Title="Custom Controls Test" Height="300" Width="300">
    
    <Window.Resources>
        <ControlTemplate x:Key="scoreTemplate" TargetType="{x:Type cc:Rating}">
            <ProgressBar x:Name="PART_Panel" Minimum="0" Maximum="5"  Value="{Binding RelativeSource={RelativeSource TemplatedParent},Path=Score}" Height="10" Foreground="Blue" />
        </ControlTemplate>
    </Window.Resources>
    
    <StackPanel>
        <me:WatermarkTextBox x:Name="wtb" Margin="5" WatermarkText="Please enter your name"  />
        <Button Margin="5" Click="OnChangeWatermarkText">Change Watermark Text</Button>
        <uc:UpDownControl Margin="5" Minimum="0" Maximum="100" />
        <cc:Rating x:Name="rating" Score="4" Margin="10" ScoreChanged="OnScoreChanged" Foreground="HotPink" Width="100" />
        <Slider Minimum="0" Maximum="5" Value="{Binding ElementName=rating, Path=Score}" />
    </StackPanel>
</Window>

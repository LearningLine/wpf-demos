<Window x:Class="VideoViewer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Simple Video Player"
    WindowStartupLocation="CenterScreen">
    
    <DockPanel>

        <StatusBar DockPanel.Dock="Top">
            <Label Content="Search _Terms:" Target="{Binding ElementName=textBox, Mode=OneWay}" />
            <TextBox x:Name="textBox" Margin="5" MinWidth="200" Text="{Binding Path=SearchTerm, UpdateSourceTrigger=PropertyChanged}"  />
            <Button Content="S_earch" Command="{Binding Path=SearchCommand}" IsDefault="True" />
            <ComboBox Width="200" DisplayMemberPath="Name" SelectedIndex="0"
                      ItemsSource="{Binding Effects}" SelectedItem="{Binding SelectedEffect}" />
        </StatusBar>
        
        <ListBox DockPanel.Dock="Top" ItemsSource="{Binding Videos}" SelectedItem="{Binding SelectedVideo}" 
                 MinHeight="100" MaxHeight="200" />

        <Separator Margin="0" DockPanel.Dock="Top" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalAlignment="Top" BorderThickness="0"/>

        <MediaElement Source="{Binding VideoUrl}" Stretch="Fill" Effect="{Binding SelectedEffect.Effect}" MediaEnded="OnRestartMedia" />

    </DockPanel>
</Window>

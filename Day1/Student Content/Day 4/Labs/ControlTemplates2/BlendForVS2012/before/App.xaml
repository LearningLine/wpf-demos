<Application x:Class="VideoViewer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModel="clr-namespace:VideoViewer.ViewModel"
    StartupUri="Window1.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type ViewModel:VideoViewModel}">
            <StackPanel>
                <TextBlock Text="{Binding Name}" FontSize="16pt" />
                <TextBlock Text="{Binding PublishDate}" />
            </StackPanel>
        </DataTemplate>

    </Application.Resources>
</Application>

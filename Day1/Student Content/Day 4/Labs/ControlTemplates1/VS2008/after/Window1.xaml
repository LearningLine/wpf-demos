<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
	      x:Class="CoolButton.Window1" Width="300" Height="300">

  <StackPanel>

    <CheckBox Name="enableButtons" IsChecked="True">Enable Buttons</CheckBox>
    
    <Button HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="100" Height="50"
            Margin="10"
            Foreground="White"
            Content="My Button"
            IsEnabled="{Binding ElementName=enableButtons, Path=IsChecked}" 
            Click="OnClick">
      <Button.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          <GradientStop Color="LightBlue" Offset="0"/>
          <GradientStop Color="DarkBlue" Offset="1"/>
        </LinearGradientBrush>
      </Button.Background>
    </Button>

    <Button HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Width="100" Height="50"
            Margin="10"
            Foreground="White"
            Content="My Button #2"
            IsEnabled="{Binding ElementName=enableButtons, Path=IsChecked}" 
            Click="OnClick">
      <Button.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          <GradientStop Color="Pink" Offset="0"/>
          <GradientStop Color="DarkRed" Offset="1"/>
        </LinearGradientBrush>
      </Button.Background>
    </Button>

  </StackPanel>
</Window>